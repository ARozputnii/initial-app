<div class="col-12 mt-3">
  <%%= form_with(model: [ :backoffice, @<%= singular_table_name %> ], local: true) do |form| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
  <div id="error_explanation">
    <ul>
      <%% @<%= singular_table_name %>.errors.full_messages.each do |message| %>
      <li><%%= message %></li>
      <%% end %>
    </ul>
  </div>
  <%% end %>
  <% attributes.each do |attribute| -%>
    <% if attribute.password_digest? -%>
      <div class="form-group row pt-3 shadow">
        <label class="col-sm-2 col-form-label"><%%= form.label :password %></label>
        <div class="col-sm-10">
          <%%= form.password_field :password, class:'form-control' %>
        </div>
      </div>
      <div class="form-group row pt-3 shadow">
        <label class="col-sm-2 col-form-label"><%%= form.label :password_confirmation %></label>
        <div class="col-sm-10">
          <%%= form.password_field :password_confirmation, class:'form-control' %>
        </div>
      </div>
    <% else %>
      <div class="form-group row pt-3 shadow">
        <label class="col-sm-2 col-form-label"><%%= form.label :<%= attribute.column_name %> %></label>
        <div class="col-sm-10">
          <%%= form.text_field :<%= attribute.column_name %>, class: 'form-control' %>
        </div>
      </div>
    <% end %>
  <% end -%>
  <div class="pt-3 mr-0"></div>
  <section class="  mt-2 pt-2  row justify-content-start">
    <%%= form.submit class: 'btn btn-primary mr-1'%>
    <%%= link_to 'Back', backoffice_<%= plural_table_name %>_path, class: "btn btn-primary" %>
  </section>
  <%% end %>
</div>
