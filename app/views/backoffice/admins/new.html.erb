<section class="  mt-2 pt-2  row justify-content-between mx-auto">
  <h1>New User</h1>
</section>
<div class="col-12 mt-3">
  <%= form_with(model: [ :backoffice, @admin ], local: true) do |form| %>
    <% if @admin.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row pt-3 shadow">
      <label class="col-sm-2 col-form-label"><%= form.label :login %></label>
      <div class="col-sm-10">
        <%= form.text_field :login, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row pt-3 shadow">
      <label class="col-sm-2 col-form-label"><%= form.label  :password, 'New password' %></label>
      <div class="col-sm-10">
        <%= form.password_field :password, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row pt-3 shadow">
      <label class="col-sm-2 col-form-label"><%= form.label  :password_confirmation, 'New password confirmation' %></label>
      <div class="col-sm-10">
        <%= form.password_field :password_confirmation, class:'form-control' %>
      </div>
    </div>
    <div class="pt-3 mr-0"></div>
    <section class="  mt-2 pt-2  row justify-content-start">
      <%= form.submit class: 'btn btn-primary mr-1'%>
      <%= link_to 'Back', backoffice_admins_path, class: "btn btn-primary" %>
    </section>
  <% end %>
</div>
