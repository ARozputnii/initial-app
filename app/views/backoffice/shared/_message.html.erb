<div class="container-fluid" id="messages">
  <% if !notice.nil?  %>
    <div class="col-lg-12">
      <p class="alert alert-success text-center mt-3 shadow" role="alert">
        <%= notice %>
      </p>
    </div>
  <% elsif !alert.nil? %>
    <div class="col-md-12">
      <p class="alert alert-danger text-center mt-3 shadow" role="alert">
        <%= alert %>
      </p>
    </div>
  <% end %>
</div>